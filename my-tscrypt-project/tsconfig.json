{
	"include": [
		"./src"
	],
	"compilerOptions": {
		"target": "es2015",
		"module": "commonjs",
		"rootDir": "./src",
		"allowJs": true,
		"outDir": "./build",
		"removeComments": true,
		"noEmitOnError": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true
	}
}